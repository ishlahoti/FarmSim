-->
<GridPane  fx:controller="ConfigController"
           xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

<children>
    <Label text = "This is the second screen">
        <GridPane.rowIndex>0</GridPane.rowIndex>
    </Label>
    <Button fx:id="nextScreen" text = "SETBUTTONTEXTHERE" onAction = "#changeScreen">
        <GridPane.rowIndex>2</GridPane.rowIndex>
        <!--
    "nextScreen" will be name of button variable in controller, set text according to what we want to appear
    changeScreen is method in controller class that handles what happens when you click button
    -->
    </Button>
</children>
</GridPane>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<!--
This is where all the LAYOUT nodes for the initial configuration screen should be added (below children)
open all layout components with <layout name> and after implementation close them with </layoutname>
implementation will be on CONTROLLER FILE
TODO: add layout nodes. player enters name/selects starting season/seed/game difficulty
-->
<?import javafx.scene.control.ChoiceBox?>
<GridPane fx:controller="ConfigController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

<children>
    <Label text = "Enter name:">
        <GridPane.rowIndex>0</GridPane.rowIndex>
        <GridPane.columnIndex>0</GridPane.columnIndex>
    </Label>
    <TextField fx:id="name">
        <GridPane.rowIndex>0</GridPane.rowIndex>
        <GridPane.columnIndex>1</GridPane.columnIndex>
    </TextField>

    <Label text = "Choose Difficulty:">
        <GridPane.rowIndex>1</GridPane.rowIndex>
        <GridPane.columnIndex>0</GridPane.columnIndex>
    </Label>
    <ChoiceBox fx:id="difficulty">
        <GridPane.rowIndex>1</GridPane.rowIndex>
        <GridPane.columnIndex>1</GridPane.columnIndex>
    </ChoiceBox>

    <Label text = "Choose Starting Seed:">
        <GridPane.rowIndex>2</GridPane.rowIndex>
        <GridPane.columnIndex>0</GridPane.columnIndex>
    </Label>
    <ChoiceBox fx:id="startingSeed">
        <GridPane.rowIndex>2</GridPane.rowIndex>
        <GridPane.columnIndex>1</GridPane.columnIndex>
    </ChoiceBox>

    <Label text = "Choose Starting Season:">
        <GridPane.rowIndex>3</GridPane.rowIndex>
        <GridPane.columnIndex>0</GridPane.columnIndex>
    </Label>
    <ChoiceBox fx:id="startingSeason">
        <GridPane.rowIndex>3</GridPane.rowIndex>
        <GridPane.columnIndex>1</GridPane.columnIndex>
    </ChoiceBox>

    <Button fx:id="submit" text = "Submit" onAction = "#changeScreen">
        <GridPane.rowIndex>4</GridPane.rowIndex>
        <GridPane.columnIndex>0</GridPane.columnIndex>
        <!--
    "nextScreen" will be name of button variable in controller, set text according to what we want to appear
    changeScreen is method in controller class that handles what happens when you click button
    -->
    </Button>
</children>
</GridPane>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<!--
This is where all the layout nodes for the Welcome Screen should be added (below children)
open all layout components with <layout name> and after implementation close them with </layoutname>
TODO: implement a welcome screen with a start button that takes you to initial configuration screen
-->
<GridPane fx:controller="WelcomeController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
<children>
    <Label text = "first screen">
        <GridPane.rowIndex>0</GridPane.rowIndex>
    </Label>
    <Button fx:id="start" text = "SETBUTTONTEXTHERE" onAction = "#changeScreen">
        <!--
        "start" will be name of button variable in controller, set text according to what we want to appear
        changeScreen is method in controller class that handles what happens when you click button
        -->
        <GridPane.rowIndex>2</GridPane.rowIndex>
    </Button>
</children>
</GridPane>
